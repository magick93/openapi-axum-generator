{% extends "base.rs.jinja" %}

{% block content %}
use axum::{
    Router,
    routing::{get, post, put, delete},
};
use super::handlers::*;

pub fn create_router() -> Router {
    Router::new()
    {% for route in routes %}
        .route("{{ route.path }}", 
            {{ route.method|lower }}({{ route.handler_name|sanitize_handler_name }}))
    {% endfor %}
}

{% endblock %}
